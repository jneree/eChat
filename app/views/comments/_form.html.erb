<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :username %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :message %><br>
    <%= f.text_area :body %>
  </p>
  <br>
  <p>
    <%= f.submit 'Send', :class => 'col-sm-2 col-sm-offset-5 btn btn-success' %>
  </p>

  <% end %>
