<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :username, :class => 'col-sm-offset-1' %><br>
    <%= f.text_field :name, :class => 'col-sm-offset-1' %>
  </p>

  <p>
    <%= f.label :message, :class => 'col-sm-offset-1' %><br>
    <%= f.text_area :body, :class => 'col-sm-8 col-sm-offset-1' %>
  </p>
  <br>
  <p>
    <%= f.submit 'Send', :class => 'col-sm-1 col-sm-offset-8 btn btn-success myMarginTop myMarginBot' %>
  </p>

  <% end %>
