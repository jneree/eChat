<%= form_for @post do |f| %>
<% if @post.errors.any? %>
<div id="errors">
  <h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving</h2>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end%>
  </ul>

</div>
<% end %>

<p>
  <br>
  <%= f.label :title , :class => 'col-sm-4 col-sm-offset-4'  %><br>
  <%= f.text_field :title, :class => 'col-sm-4 col-sm-offset-4'  %>
</p>

<p>
  <%= f.label :subject, :class => 'col-sm-4 col-sm-offset-4 myMargin'   %><br>
  <%= f.text_area :body , :class => 'col-sm-4 col-sm-offset-4'  %>
</p>

<p>
  <%= f.submit 'Create Room', :class => 'col-sm-2 col-sm-offset-5 btn btn-success myMarginTop' %>
</p>
<% end %>
